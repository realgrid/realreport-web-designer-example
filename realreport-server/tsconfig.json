{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@projectRoot/*": ["./*"],
            "@src/*": ["src/*"],
            "@routes/*": ["src/routes/*"],
            "@lib/*": ["src/lib/*"],
            "@schema/*": ["src/schema/*"]
        },
        "resolveJsonModule": true
    }
}
